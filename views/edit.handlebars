<h1 class="mb-1 restaurant-show-title">編輯餐廳</h1>
<div class="container">
  <form action="/restaurants/{{restaurant._id}}/edit" method="POST">
    <div class="row">
      <div class="col mb-3">
        <label for="name" class="form-label">餐廳名稱<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="name" name="name" placeholder="好吃餐廳..." value="{{restaurant.name}}" required>
      </div>
      <div class="col mb-3">
        <label for="name_en" class="form-label">英文名稱<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="name_en" name="name_en" placeholder="good restaurant..." value="{{restaurant.name_en}}" required>
      </div>
    </div>
    <div class="row">
      <div class="col mb-3">
        <label for="category" class="form-label">分類<span class="text-danger">*</span></label>
        <input type="text" class="form-control" id="category" placeholder="美式" list="datalistOptions" name="category" value="{{restaurant.category}}"
          required />
        <datalist id="datalistOptions">
          <option>美式</option>
          <option>咖啡</option>
          <option>酒吧</option>
          <option>中東料理</option>
          <option>日本料理</option>
          <option>義式餐廳</option>
        </datalist>
      </div>
      <div class="col mb-3">
        <label for="rating" class="form-label">評分<span class="text-danger">*</span></label>
        <input type="number" class="form-control" min="0" max="5" step="0.1" id="rating" name="rating" value="{{restaurant.rating}}" required>
      </div>
    </div>
    <div class="mb-3">
      <label for="image" class="form-label">餐廳照片<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="image" name="image" placeholder="請輸入圖片網址..." value="{{restaurant.image}}" required>
    </div>
    <div class="mb-3">
      <label for="location" class="form-label">餐廳地址<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="location" name="location" placeholder="台北市..." value="{{restaurant.location}}" required>
    </div>
    <div class="mb-3">
      <label for="phone" class="form-label">餐廳電話<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="phone" name="phone" placeholder="02 1234 4321..." value="{{restaurant.phone}}" required>
    </div>
    <div class="mb-3">
      <label for="google_map" class="form-label">餐廳Google地圖連結<span class="text-danger">*</span></label>
      <input type="text" class="form-control" id="google_map" name="google_map" placeholder="請輸入地圖連結..." value="{{restaurant.google_map}}" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">敘述<span class="text-danger">*</span></label>
      <textarea class="form-control" id="description" name="description"  required>{{restaurant.description}}</textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">
        送出資料
      </button>
      <a href="/">
        <button type="button" class="btn btn-success">
          返回
        </button>
      </a>
    </div>
  </form>
</div>